<%= simple_form_for @quote, :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.input :name %>
  <%= f.input :message %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                quotes_path, :class => 'btn btn-default' %>
<% end %>
